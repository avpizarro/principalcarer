{
  "name": "principalcarer",
  "version": "1.0.0",
  "description": "An app to help you care and interact with your loved one, with features to help the long distance carer.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "seed": "node scripts/seedDB.js",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avpizarro/principalcarer.git"
  },
  "keywords": [
    "principal carer",
    "long distance",
    "dementia",
    "person center care",
    "MERN"
  ],
  "author": "avpizarro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/avpizarro/project3/issues"
  },
  "homepage": "https://github.com/avpizarro/project3#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.12.7",
    "socket.io": "^4.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "nodemon": "^2.0.7"
  }
}
